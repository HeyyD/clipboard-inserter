{
  "manifest_version": 3,
  "name": "Clipboard Inserter",
  "version": "0.3.2",
  "description": "A simple addon that inserts clipboard contents into the page. Uses icon made by Google from www.flaticon.com licensed by CC 3.0 BY",

  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "64": "icon/icon64.png"
  },

  "permissions": [
    "activeTab",
    "clipboardRead",
    "storage",
    "scripting",
    "tabs",
    "offscreen"
  ],

  "host_permissions": [
    "file://*/*"
  ],

  "action": {
    "default_icon": {
      "16": "icon/icon16.png",
      "32": "icon/icon32.png",
      "64": "icon/icon64.png"
    },
    "default_title": "Toggle clipboard inserter"
  },

  "background": {
    "service_worker": "bg/background.js"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
